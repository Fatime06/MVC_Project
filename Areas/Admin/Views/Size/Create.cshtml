@model Size
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-body p-4">
                    <h3 class="mb-4 text-center text-primary">Add New Size</h3>
                    <form method="post">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold">Name</label>
                            <input asp-for="Name" class="form-control form-control-lg">
                            <span class="text-danger small" asp-validation-for="Name"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary btn-lg w-45">Back</a>
                            <button type="submit" class="btn btn-primary btn-lg w-45">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts {
    @await Html.PartialAsync("_ValidationPartial")

}
