@model Size

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-body p-4">
                    <h3 class="mb-4 text-center text-primary">Edit Size</h3>
                    <form method="post" class="shadow p-4 rounded bg-white">
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold">Title</label>
                            <input asp-for="Name" class="form-control form-control-lg">
                            <span class="text-danger small" asp-validation-for="Name"></span>
                        </div>

                        <button type="submit" class="btn btn-primary">Save Changes</button>
                        <a asp-action="Index" class="btn btn-secondary">Back</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts {
    @await Html.PartialAsync("_ValidationPartial")

    <script>
        $(document).ready(function () {
            $("#imageInput").change(function (ev) {
                let file = ev.target.files[0];

                if (!file) {
                    $("#imgPreview").hide();
                    return;
                }

                var reader = new FileReader();
                reader.onload = function (e) {
                    $("#imgPreview").attr("src", e.target.result).show();
                };
                reader.readAsDataURL(file);
            });
        });
    </script>
}
