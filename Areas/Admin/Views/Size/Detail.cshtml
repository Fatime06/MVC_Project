@model Size

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-body p-4">
                    <h3 class="mb-4 text-center text-primary">Size Details</h3>

                    <div class="mb-3">
                        <label class="form-label fw-bold">ID:</label>
                        <input class="form-control form-control-lg" value="@Model.Id" disabled>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Name:</label>
                        <input class="form-control form-control-lg" value="@Model.Name" disabled>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Created Date:</label>
                        <input class="form-control form-control-lg" value="@Model.CreateDate.ToString("yyyy-MM-dd HH:mm")" disabled>
                    </div>

                    <div class="text-center">
                        <a asp-action="Index" class="btn btn-secondary btn-lg w-50">Back</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
