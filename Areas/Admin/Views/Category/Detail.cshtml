@model Category
<div class="container px-4 mt-4">
    <div class="row px-5">
        <div class="col">
            <div class="p-3 border bg-light">Name: @Model.Name</div>
            <div class="p-3 border bg-light">Product Count: @Model.Products.Count</div>
            <div class="p-3 border bg-light">CreatedDate: @Model.CreateDate.ToString("dd MMMM yyyy")</div>
        </div>
        <div class="col">
            <a class="btn btn-primary" asp-action="index">Go Back</a>
        </div>
    </div>
</div>
